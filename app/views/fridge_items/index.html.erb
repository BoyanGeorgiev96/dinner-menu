<p id="notice"><%= notice %></p>

<h1>Fridge Items</h1>

<table>
  <thead>
    <tr>
      <th>Ingredient</th>
      <th>Ingredient quantity</th>
      <th>Measurement</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @fridge_items.each do |fridge_item| %>
      <tr>
        <td><%= fridge_item.ingredient_id %></td>
        <td><%= fridge_item.ingredient_quantity %></td>
        <td><%= fridge_item.measurement %></td>
        <td><%= link_to 'Show', fridge_item %></td>
        <td><%= link_to 'Edit', edit_fridge_item_path(fridge_item) %></td>
        <td><%= link_to 'Destroy', fridge_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

